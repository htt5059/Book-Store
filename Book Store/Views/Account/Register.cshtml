@model Book_Store.Models.ViewModels.AccountVM
@{
    ViewBag.Title = "Register";
}

<div class="container mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            <h1 class="mb-3 h3 text-center">
                Register
            </h1>
            <form asp-area="" asp-action="Register" asp-controller="Account" method="post">
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" id="email" class="form-control" asp-for="Account.Email"></input>
                </div>
                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input type="text" id="username" class="form-control" asp-for="Account.UserName"></input>
                </div>
                <div class="mb-3">
                    <label class="form-label">Password
                        <i class="bi bi-question border rounded-circle" style="width:32px; height: 32px" data-bs-toggle="tooltips" data-bs-placement="top" title="Password must include numbers, alphabets, uppercase, lowercase, and special characters"></i>
                    </label>
                    <input type="password" id="password" class="form-control" asp-for="Account.Password"></input>
                </div>

                <div class="d-flex justify-content-center mb-3">
                    <button type="submit" class="btn btn-dark">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>
