@model Book_Store.Models.ViewModels.TagVM
@{
    ViewBag.Title = "Tags";
}
<div class="container">
    <form class="row border border-dark m-1" method="post">
        <div class="col">
            <div class="row row-cols-1 row-cols-lg-2">
                <div class="col">
                    <div class="row row-cols-1 row-cols-md-2 m-1">
                        <div class="col p-0 col-md-3">
                            <label class="col-form-label">Tag Name</label>
                        </div>
                        <div class="col col-md-9 p-0">
                            <input class="form-control" type="text" asp-for="TagRequest.Name" placeholder="required" required />
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="row row-cols-1 row-cols-md-2 m-1">
                        <div class="col p-0 col-md-3">
                            <label class="col-form-label">Display Name</label>
                        </div>
                        <div class="col col-md-9 p-0">
                            <input class="form-control" type="text" asp-for="TagRequest.DisplayName" placeholder="required" required />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col m-1 p-0 d-flex justify-content-center">
                <button type="submit" class="btn btn-dark">Submit</button>
            </div>
        </div>
    </form>
</div>
